{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-service", "Port": 8081 }
      ],
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": ["POST"]
    },
    {
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-service", "Port": 8081 }
      ],
      "UpstreamPathTemplate": "/gateway/auth/register",
      "UpstreamHttpMethod": ["POST"]
    },
    {
      "DownstreamPathTemplate": "/api/auth/refresh",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-service", "Port": 8081 }
      ],
      "UpstreamPathTemplate": "/gateway/auth/refresh",
      "UpstreamHttpMethod": ["POST"]
    },
    
    
    
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user-service",
          "Port": 8081
        }
      ],
      "UpstreamHttpMethod": ["GET", "POST", "PATCH"],
      "UpstreamPathTemplate": "/gateway/auth/{everything}",
      "AddHeadersToRequest": {
        "Authorization": "{Authorization}"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/users/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user-service",
          "Port": 8081
        }
      ],
      "UpstreamHttpMethod": ["GET", "PATCH"],
      "UpstreamPathTemplate": "/gateway/users/{everything}",
      "AddHeadersToRequest": {
        "Authorization": "{Authorization}"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/organizations/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "org-service", "Port": 8082 }],
      "UpstreamPathTemplate": "/gateway/organizations/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PATCH", "DELETE"],
      "AddHeadersToRequest": { "Authorization": "{Authorization}" },
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] },
      "RouteIsCaseSensitive": false

    },
    {
      "DownstreamPathTemplate": "/api/invitations/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "org-service", "Port": 8082 }],
      "UpstreamPathTemplate": "/gateway/invitations/{everything}",
      "UpstreamHttpMethod": ["GET", "POST"],
      "AddHeadersToRequest": { "Authorization": "{Authorization}" },
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] },
      "RouteIsCaseSensitive": false

    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001"
  }
}
